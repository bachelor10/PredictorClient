{
    "compilerOptions": {
        "module": "es6",
        "target": "es5",
        "removeComments": true,
        "allowJs": true,
        "preserveConstEnums": true,
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "listFiles": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*__tests__/*"
    ]
}